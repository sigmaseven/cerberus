# API Configuration
# Base URL for the Cerberus SIEM API
VITE_API_BASE_URL=http://localhost:8080

# Backend URL used for Playwright E2E tests
VITE_PLAYWRIGHT_BACKEND_URL=http://localhost:8080

# Feature Flags
# Enable/disable WebSocket real-time updates
VITE_ENABLE_WEBSOCKET=false

# Enable/disable ML analytics features
VITE_ENABLE_ML_ANALYTICS=true

# Error Reporting (Optional)
# Endpoint for sending error reports
VITE_ERROR_REPORTING_ENDPOINT=

# API key for error reporting service
VITE_ERROR_REPORTING_API_KEY=

# GitHub Integration (Optional)
# Repository URL for creating GitHub issues from errors
VITE_GITHUB_REPO_URL=https://github.com/your-org/cerberus

# Application Version
# Displayed in error reports and about dialogs
VITE_APP_VERSION=1.0.0

# Debug Settings (Development Only)
# Enable detailed authentication logging
VITE_ENABLE_AUTH_DEBUG=false

# Enable debug logging in general
VITE_ENABLE_DEBUG_LOGS=false
